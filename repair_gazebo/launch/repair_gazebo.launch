<launch>

  <param name="use_sim_time" type="bool" value="true"/>
  <arg name="gazebo" default="true"/>
  <arg name="sh_version" default="v1_2_research" />
  <arg name="fixed_hands" default="true" />

  <!-- Args -->
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="physics" default="ode"/>
  <arg name="verbose" default="false"/>
  <arg name="extra_gazebo_args" default=""/>

  <arg unless="$(arg paused)" name="command_arg1" value=""/>
  <arg     if="$(arg paused)" name="command_arg1" value="-u"/>
  <arg unless="$(arg headless)" name="command_arg2" value=""/>
  <arg     if="$(arg headless)" name="command_arg2" value="-r"/>
  <arg unless="$(arg verbose)" name="command_arg3" value=""/>
  <arg     if="$(arg verbose)" name="command_arg3" value="--verbose"/>
  <arg unless="$(arg debug)" name="script_type" value="gzserver"/>
  <arg     if="$(arg debug)" name="script_type" value="debug"/>
  <arg name="initial_joint_positions" default=" -J j_arm_1_1 -0.5 -J j_arm_1_2 -0.5 -J j_arm_1_3 0.5 -J j_arm_1_4 -1.0 -J arm_1_5 -0.5 -J j_arm_1_6 -0.5 -J j_arm_1_7 -1.0 -J j_arm_2_1 0.5 -J j_arm_2_2 0.5 -J j_arm_2_3 -0.5 -J j_arm_2_4 1.0 -J j_arm_2_5 0.5 -J j_arm_2_6 0.5 -J j_arm_2_7 1.0" doc="Initial joint configuration of the robot"/>


  <arg name="world_name" value="$(find repair_gazebo)/worlds/repair.world"/>

  <!-- Load the right URDF into the ROS Parameter Server, depending on the chosen model type -->
  <param name="robot_description_gz"
         command="$(find xacro)/xacro $(find repair_urdf)/urdf/repair_full.urdf.xacro sh_version:='$(arg sh_version)' fixed_hands:='$(arg fixed_hands)'"/>

  <!-- spawn the first fragment    
  <arg name="fragment2_model" default="$(find repair_urdf)/sdf/frag2/model.sdf"/>
  <node name="fragment2_description1" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg fragment2_model) -sdf -model frag2 -x 0.0 -y 0.0 -z 1.5" />

  <arg name="fragment1_model" default="$(find repair_urdf)/sdf/frag/model.sdf"/>
  <node name="fragment1_description1" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg fragment1_model) -sdf -model frag -x -1.0 -y 1.0 -z 2.5" /> -->
  
  <!-- spawn the rpf 123 fragment -->
   <arg name="RPf_00123_model" default="$(find repair_urdf)/sdf/RPf_00123/model.sdf"/>
  <node name="RPf_00123_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg RPf_00123_model) -sdf -model RPf_00123 -x 0.2 -y 0.0 -z 1.5" />

  <arg name="RPf_00124_model" default="$(find repair_urdf)/sdf/RPf_00124/model.sdf"/>
  <node name="RPf_00124_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg RPf_00124_model) -sdf -model RPf_00124 -x 0.2 -y 0 -z 1.5" />

  <arg name="RPf_00125_model" default="$(find repair_urdf)/sdf/RPf_00125/model.sdf"/>
  <node name="RPf_00125_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg RPf_00125_model) -sdf -model RPf_00125 -x 0.0 -y 0.0 -z 1.5" />

  <arg name="RPf_00126_model" default="$(find repair_urdf)/sdf/RPf_00126/model.sdf"/>
  <node name="RPf_00126_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg RPf_00126_model) -sdf -model RPf_00126 -x 0.0 -y -0.2 -z 1.5" />

  <!-- <arg name="frag2_model" default="$(find repair_urdf)/sdf/frag2/model.sdf"/>
  <node name="frag2_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg frag2_model) -sdf -model frag2 -x 0.0 -y 0.0 -z 1.5" /> -->

  <!-- spawn the second fragment -->
  <!-- <arg name="fragment_model" default="$(find repair_urdf)/sdf/frag3/model.sdf"/>
  <node name="fragment_description" pkg="gazebo_ros" type="spawn_model" 
  args="-file $(arg fragment_model) -sdf -model frag3 -x 0.0 -y 0.0 -z 1.5" /> -->
  
  <group if="$(arg gazebo)">
  <!-- start gazebo server-->
    <node name="gazebo" 
          pkg="gazebo_ros"
          type="$(arg script_type)" 
          respawn="false" 
          output="screen"
          args="$(arg command_arg1) $(arg command_arg2) $(arg command_arg3) -e $(arg physics) $(arg extra_gazebo_args) $(arg world_name) -namespace repair" />

    <!-- start gazebo client -->
    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen" if="$(arg gui)"/>

    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
          args="-unpause -urdf -model repair  $(arg initial_joint_positions)  -param robot_description_gz"/>

  </group>

</launch>
