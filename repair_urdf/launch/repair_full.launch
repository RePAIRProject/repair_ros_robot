<launch>

    <arg name="gui" default="true" />
    <arg name="visualize_inertia" default="false" />

    <param name="robot_description"
        command="$(find xacro)/xacro '$(find repair_urdf)/urdf/repair_full.urdf.xacro'" />
    <param name="use_gui" value="$(arg gui)" />
    <param name="rate" value="50.0" />


    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="publish_default_efforts" value="True" />
        <rosparam param="zeros">
            j_torso_1: 0.0
            j_arm_2_1: 0.0
            j_arm_2_2: 0.57
            j_arm_2_3: 0.0
            j_arm_2_4: 1.07
            j_arm_2_5: 0.72
            j_arm_2_6: -0.27
            j_arm_2_7: 0.0
            j_arm_1_1: 0.0
            j_arm_1_2: -0.57
            j_arm_1_3: 0.0
            j_arm_1_4: -1.07
            j_arm_1_5: -0.72
            j_arm_1_6: 0.27
            j_arm_1_7: 0.0
        </rosparam>
    </node>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"
        output="screen">
        <param name="publish_frequency" type="double" value="250.0" />
    </node>

    <node pkg="rviz" type="rviz" name="rviz" output="screen" if="$(arg gui)"
        args="-d $(find repair_urdf)/config/repair_full.rviz">
    </node>

    <node if="$(arg visualize_inertia)" pkg="robot_inertia_publisher" type="robot_inertia_publisher"
        name="robot_inertia_publisher" output="screen" />

</launch>